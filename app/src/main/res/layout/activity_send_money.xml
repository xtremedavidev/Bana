<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    android:layout_height="match_parent"
    tools:context=".SendMoneyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_circle"
            tools:ignore="ContentDescription"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Send Money"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/scan_send_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:elevation="20dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/halfroundwhitebg"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="15dp"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/scanimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/halfroundwhitebg"
                    android:backgroundTint="@color/semi_grey"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_qr_code_24"
                    app:tint="@color/orange"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/transferbanktxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/scanimg"
                    android:text="Scan QR code"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transferbankfeetxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transferbanktxt2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/scanimg"
                    android:text="Add Money via bank transfer"
                    android:textSize="14sp" />






            </RelativeLayout>




        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/bana_send_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:elevation="20dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/halfroundwhitebg"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="15dp"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/banaimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/halfroundwhitebg"
                    android:backgroundTint="@color/semi_grey"
                    android:padding="5dp"
                    android:src="@drawable/logo"
                    app:tint="@color/orange"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/transferbanktxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/banaimg"
                    android:text="Transfer Via Bana ID"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transferbankfeetxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transferbanktxt3"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/banaimg"
                    android:text="Add Money via bank transfer"
                    android:textSize="14sp" />






            </RelativeLayout>




        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/banktrans_send_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:elevation="20dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/halfroundwhitebg"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="15dp"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/paystackimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/halfroundwhitebg"
                    android:backgroundTint="@color/semi_grey"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_payment_24"
                    app:tint="@color/orange"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/transferbanktxt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/paystackimg"
                    android:text="Transfer Via Bank"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transferbankfeetxt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transferbanktxt4"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/paystackimg"
                    android:text="Add Money via bank transfer"
                    android:textSize="14sp" />






            </RelativeLayout>




        </LinearLayout>




    </LinearLayout>


</LinearLayout>