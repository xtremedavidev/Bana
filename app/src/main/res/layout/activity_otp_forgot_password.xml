<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpForgotPasswordActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/semi_icons"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/semi_icons_2"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/linloginarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/otp"
            android:textSize="35sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/forgot_otp_subtext" />

        <com.mukeshsolanki.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:inputType="number"
            android:itemBackground="@drawable/pinbg"
            android:textColor="@color/deep_grey"
            app:OtpItemRadius="15dp"
            app:OtpHideLineWhenFilled="true"
            app:OtpLineColor="@color/semi_grey"
            app:OtpItemCount="5"
            app:OtpItemSpacing="10dp"
            android:gravity="center"
            app:OtpViewType="rectangle"
            />


        <TextView
            android:id="@+id/ofpnext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btnorangebg"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Didn't receive a code? " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="Resend"
                android:textColor="@color/orange"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>